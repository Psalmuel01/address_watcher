{
   "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ESNext",
      "allowImportingTsExtensions": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true
   },
   "exclude": [
      "node_modules",
      "**/node_modules/*"
   ], 
   "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}